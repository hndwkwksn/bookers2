<main>
  <% flash[:notice] %>
  <div id="notice">
    <%= notice %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
          <tr>
          </tr>
          <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
          </tr>
          <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
          </tr>
          </tbody>
        </table>

        <div class="row"><i class="fa-solid fa-user-gear"></i>
          <%= link_to "UserEdit", edit_user_path(@user.id) %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @newbook, method: :post do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book' %>
            </div>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <% if @user.profile_image.attached? %>
                    <%= image_tag @book.user.get_profile_image(100,100) %><br>
                    <%= @book.user.name %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %><%= @book.title %><% end %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                 <%= link_to "Edit", edit_book_path(@book.id) %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                 <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
