<main>
  <% flash[:notice] %>
  <div id="notice">
    <%= notice %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
          <table class="table">
            <tbody>
              <tr>
	            <th>name</th>
	            <th><%= @user.name %></th>
              </tr>
              <tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row"><i class="fa-solid fa-user-gear"></i>
            <%= link_to "UserEdit", edit_user_path(@user.id) %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, method: :post do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book' %>
            </div>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.get_profile_image(100,100) %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>